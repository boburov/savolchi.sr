generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  username   String
  email      String   @unique
  password   String
  role       String   @default("USER")
  xp         Int      @default(0)
  isPremium  Boolean  @default(false)
  usingTime  Int      @default(0)
  rank       Rank     @default(F)
  createdAt  DateTime @default(now())
  isVerified Boolean  @default(false)
  result     Result[]
}

model Admin {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  role       String   @default("ADMIN")
  isVerified Boolean  @default(false)
  tgId       String?  @unique
  createdAt  DateTime @default(now())

  channel      Channel?      @relation("AdminHasChannel")
  subscription Subscription? @relation("AdminHasSubscription")
}

model Channel {
  id        String   @id
  name      String
  pfp       String?
  banner    String?
  bio       String?
  adminId   String   @unique
  createdAt DateTime @default(now())

  admin   Admin     @relation("AdminHasChannel", fields: [adminId], references: [id], onDelete: Cascade)
  subject Subject[]
}

model Subscription {
  id           String           @id @default(cuid())
  adminId      String           @unique
  type         SubscriptionType @default(MONTHLY)
  verified     Boolean          @default(false)
  limit        Int              @default(200)
  subjectLimit Int              @default(3)
  expiresAt    DateTime
  active       Boolean          @default(true)

  admin Admin @relation("AdminHasSubscription", fields: [adminId], references: [id], onDelete: Cascade)
}

model Option {
  id        String   @id @default(cuid())
  text      String   @unique
  isCorrect Boolean  @default(false)
  testId    String
  test      Test     @relation(fields: [testId], references: [id], onDelete: Cascade)
  results   Result[]
}

model Result {
  id        String  @id @default(cuid())
  userId    String
  testId    String  @unique
  optionId  String  @unique
  isSkiped  Boolean @default(false)
  xpEarned  Int     @default(0)
  timeSpent Int?
  option    Option  @relation(fields: [optionId], references: [id])
  test      Test    @relation(fields: [testId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subject {
  id        String     @id @default(cuid())
  name      String
  channelId String
  timer     Int        @default(30)
  type      TYPE       @default(PUBLIC)
  createdAt DateTime   @default(now())
  Channel   Channel    @relation(fields: [channelId], references: [id], onDelete: Cascade)
  Test      Test[]
  users     TestUser[]
}

model TestUser {
  id        String   @id @default(uuid())
  subject   Subject? @relation(fields: [subjectId], references: [id])
  username  String
  email     String   @unique
  subjectId String?
}

model Test {
  id        String   @id @default(cuid())
  question  String
  subjectId String
  Option    Option[]
  Result    Result[]
  Subject   Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
}

enum Rank {
  S
  A
  B
  C
  D
  E
  F
}

enum TYPE {
  PRIVATE
  PUBLIC
}

enum SubscriptionType {
  MONTHLY
  THREE_MONTHS
  SIX_MONTHS
  YEARLY
}
