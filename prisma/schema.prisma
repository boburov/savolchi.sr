generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  username   String
  email      String   @unique
  password   String
  role       String   @default("USER")
  xp         Int      @default(0)
  rank       Rank     @default(F)
  createdAt  DateTime @default(now())
  isVerified Boolean  @default(false)
  result     Result[]
}

model Admin {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  password   String
  role       String   @default("ADMIN")
  isVerified Boolean  @default(false)
  tgId       String?  @unique
  createdAt  DateTime @default(now())

  channel      Channel?      @relation("AdminHasChannel")
  subscription Subscription? @relation("AdminHasSubscription")
}

model Channel {
  id        String   @id
  name      String
  pfp       String?
  banner    String?
  bio       String?
  adminId   String   @unique
  createdAt DateTime @default(now())

  admin   Admin     @relation("AdminHasChannel", fields: [adminId], references: [id])
  subject Subject[]
}

model Subscription {
  id           String           @id @default(cuid())
  adminId      String           @unique
  type         SubscriptionType @default(MONTHLY)
  verified     Boolean          @default(false)
  limit        Int              @default(200)
  subjectLimit Int              @default(3)
  expiresAt    DateTime
  active       Boolean          @default(true)

  admin Admin @relation("AdminHasSubscription", fields: [adminId], references: [id])
}

model Option {
  id        String  @id @default(cuid())
  text      String
  isCorrect Boolean @default(false)
  testId    String
  test      Test    @relation(fields: [testId], references: [id])
}

model Result {
  id          String   @id @default(cuid())
  userId      String
  testId      String
  xpEarned    Int      @default(0)
  completedAt DateTime @default(now())
  test        Test     @relation(fields: [testId], references: [id])
  user        User     @relation(fields: [userId], references: [id])
}

model Subject {
  id        String   @id @default(cuid())
  name      String
  channelId String
  createdAt DateTime @default(now())
  Channel   Channel  @relation(fields: [channelId], references: [id])
  Test      Test[]
}

model Test {
  id        String   @id @default(cuid())
  question  String
  subjectId String
  Option    Option[]
  Result    Result[]
  Subject   Subject  @relation(fields: [subjectId], references: [id])
}

enum Rank {
  S
  A
  B
  C
  D
  E
  F
}

enum SubscriptionType {
  MONTHLY
  THREE_MONTHS
  SIX_MONTHS
  YEARLY
}
